{
  "name": "recursive-ai",
  "version": "0.1.0",
  "private": true,
  "description": "SWARM: AI-native SDLC marketplace for Claude Code plugins",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "test": "bun test",
    "format": "bunx biome format --write .",
    "build:mcp": "bun build packages/cli/src/mcp-server.ts --target=bun --outfile=dist/mcp-server.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.7.0"
  }
}
